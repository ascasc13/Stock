<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .popup {
            position: fixed;
            bottom: 100px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px;
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            z-index: 1000;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .popup.error {
            background-color: #dc3545;
        }
        .popup.show {
            opacity: 1;
        }
        @media (max-width: 600px) {
            .popup {
                width: 100%;
                text-align: center;
                left: 0;
                right: 0;
                margin-left: auto;
                margin-right: auto;
            }
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
</head>
<body>
<%- include('partials/header') %>
<main>
    <h1><%= title %></h1>

    <div class="cards-container">
        <div class="card">
            <div class="card-header">
                <h2>Ajouter un équipement</h2>
            </div>
            <div class="card-body">
                <form id="equipementForm">
                    <div class="form-group">
                        <label for="type">Type :</label>
                        <select id="type" name="type_id">
                            <% types.forEach(type => { %>
                                <option value="<%= type.id %>"><%= type.nom %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="status">Status :</label>
                        <select id="status" name="status_id">
                            <% statuses.forEach(status => { %>
                                <option value="<%= status.id %>"><%= status.nom %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nom">Nom :</label>
                        <input type="text" id="nom" name="nom" required>
                    </div>
                    <div class="form-group">
                        <label for="marque">Marque :</label>
                        <select id="marque" name="marque_id">
                            <% marques.forEach(marque => { %>
                                <option value="<%= marque.id %>"><%= marque.nom %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="modele">Modèle :</label>
                        <input type="text" id="modele" name="modele" required>
                    </div>
                    <div class="form-group">
                        <label for="code_barre">Code Barre :</label>
                        <input type="text" id="code_barre" name="code_barre" required>
                    </div>
                    <div class="form-group">
                        <button type="submit">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2>Ajouter un type</h2>
            </div>
            <div class="card-body">
                <form id="typeForm">
                    <div class="form-group">
                        <label for="nom_type">Nom :</label>
                        <input type="text" id="nom_type" name="nom_type" required>
                    </div>
                    <div class="form-group">
                        <button type="submit">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2>Ajouter un statut</h2>
            </div>
            <div class="card-body">
                <form id="statusForm">
                    <div class="form-group">
                        <label for="nom_statut">Nom :</label>
                        <input type="text" id="nom_statut" name="nom_statut" required>
                    </div>
                    <div class="form-group">
                        <button type="submit">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2>Ajouter une marque</h2>
            </div>
            <div class="card-body">
                <form id="marqueForm">
                    <div class="form-group">
                        <label for="nom_marque">Nom :</label>
                        <input type="text" id="nom_marque" name="nom_marque" required>
                    </div>
                    <div class="form-group">
                        <button type="submit">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2>Entrer un code barre</h2>
            </div>
            <div class="card-body">
                <form id="codeBarreForm">
                    <div class="form-group">
                        <label for="code_barre_input">Code Barre :</label>
                        <input type="text" id="code_barre_input" name="code_barre" required>
                    </div>
                    <div class="form-group">
                        <button type="button" onclick="interpreterCodeBarre()">Interpréter</button>
                    </div>
                </form>
                <div id="resultat_code_barre"></div>
            </div>
        </div>


        <div id="popup" class="popup"></div>

</main>
<%- include('partials/footer') %>

<script>
    const showPopup = (message, isError = false) => {
        const popup = document.getElementById('popup');
        popup.textContent = message;
        popup.className = 'popup show';
        if (isError) {
            popup.classList.add('error');
        }
        setTimeout(() => {
            popup.classList.remove('show');
        }, 3000);
    };

    const handleFormSubmit = (formId, url) => {
        const form = document.getElementById(formId);
        form.addEventListener('submit', (event) => {
            event.preventDefault();
            const formData = new FormData(form);
            const data = {};
            formData.forEach((value, key) => {
                data[key] = value;
            });

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(result => {
                    showPopup(result.message, !result.success);
                    if (result.success) {
                        form.reset();
                    }
                })
                .catch(error => {
                    showPopup('Erreur lors de l\'envoi des données', true);
                });
        });
    };

    handleFormSubmit('equipementForm', '/equipements');
    handleFormSubmit('typeForm', '/types');
    handleFormSubmit('statusForm', '/statuses');
    handleFormSubmit('marqueForm', '/marques');
</script>
</body>
</html>
